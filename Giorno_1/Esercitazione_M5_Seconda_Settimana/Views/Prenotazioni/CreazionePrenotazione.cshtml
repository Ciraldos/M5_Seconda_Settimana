@model Esercitazione_M5_Seconda_Settimana.Models.Prenotazione

@{
    ViewData["Title"] = "Aggiunta Prenotazione";
}


<div class="row justify-content-center">
    <div class="col-md-6">
        <h1 class="text-center">Crea Prenotazione</h1>

        <hr class="myBgPurple"/>
        <form asp-action="CreazionePrenotazione">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DataPrenotazione" class="control-label mb-1 ps-2">Inserisci data prenotazione:</label>
                <input asp-for="DataPrenotazione" class="form-control qnt" />
                <span asp-validation-for="DataPrenotazione" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="NumProgressivo" class="control-label mb-1 ps-2">Inserisci num. progressivo:</label>
                <input asp-for="NumProgressivo" class="form-control qnt" />
                <span asp-validation-for="NumProgressivo" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Anno" class="control-label mb-1 ps-2">Inserisci anno:</label>
                <input asp-for="Anno" class="form-control qnt" />
                <span asp-validation-for="Anno" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="SoggiornoDal" class="control-label mb-1 ps-2">Inserisci data inizio soggiorno:</label>
                <input asp-for="SoggiornoDal" class="form-control qnt" />
                <span asp-validation-for="SoggiornoDal" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="SoggiornoAl" class="control-label mb-1 ps-2">Inserisci data fine soggiorno:</label>
                <input asp-for="SoggiornoAl" class="form-control qnt" />
                <span asp-validation-for="SoggiornoAl" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Caparra" class="control-label mb-1 ps-2">Inserisci caparra <span class="fw-bolder">(€)</span>:</label>
                <input asp-for="Caparra" class="form-control qnt" />
                <span asp-validation-for="Caparra" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Tariffa" class="control-label mb-1 ps-2">Inserisci tariffa <span class="fw-bolder">(€)</span>:</label>
                <input asp-for="Tariffa" class="form-control qnt" />
                <span asp-validation-for="Tariffa" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="PensioneCompleta" class="control-label mb-1 ps-2">Inserisci tipo pensione:</label>
                <select asp-for="PensioneCompleta" class="form-control qnt">
                    <option value="" disabled selected>Seleziona una opzione</option>
                    <option value="Prima Colazione">Prima Colazione</option>
                    <option value="Mezza Pensione">Mezza Pensione</option>
                    <option value="Pensione Completa">Pensione Completa</option>
                </select>
                <span asp-validation-for="PensioneCompleta" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="IdCliente" class="control-label mb-1 ps-2">Inserisci identificativo cliente:</label>
                <input asp-for="IdCliente" class="form-control qnt" />
                <span asp-validation-for="IdCliente" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="IdCamera" class="control-label mb-1 ps-2">Inserisci identificativo camera:</label>
                <input asp-for="IdCamera" class="form-control qnt" />
                <span asp-validation-for="IdCamera" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Crea" class="btn myBtn" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
