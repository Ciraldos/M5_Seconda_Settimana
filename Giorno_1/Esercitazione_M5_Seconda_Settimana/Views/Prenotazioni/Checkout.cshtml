@model Esercitazione_M5_Seconda_Settimana.Models.AllModels.AllModels

@{
    ViewData["Title"] = "Checkout";
    var id = ViewBag.Id;
}

<h1 class="ps-2 mb-2">Checkout</h1>

        <div class="card card-custom">
            <div class="card-header-custom">
                Dettagli della Prenotazione ID: @id
            </div>
            <div class="card-body card-body-custom">
                <dl class="row dl-horizontal">
                    <dt class="col-sm-3">Numero Camera:</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Prenotazione.NumCamera)</dd>

                    <dt class="col-sm-3">Data Inizio Soggiorno:</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Prenotazione.SoggiornoDal)</dd>

                    <dt class="col-sm-3">Data Fine Soggiorno:</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Prenotazione.SoggiornoAl)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Prenotazione.Tariffa)</dt>
                    <dd class="col-sm-9">€@Html.DisplayFor(model => model.Prenotazione.Tariffa)</dd>
                </dl>
            </div>
        </div>

        <div class="card card-custom mt-3">
            <div class="card-header-custom">
                Servizi Aggiuntivi
            </div>
            <div class="card-body card-body-custom">
                @if (Model.Servizio != null && Model.Servizio.Any())
                {
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Quantità</th>
                                <th>@Html.DisplayNameFor(model => model.Servizio.First().Descrizione)</th>
                                <th>Prezzo Singolo Servizio</th>
                                <th>Prezzo Totale</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var servizio in Model.Servizio)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => servizio.Quantita)</td>
                                    <td>@Html.DisplayFor(modelItem => servizio.Descrizione)</td>
                                    <td>€@Html.DisplayFor(modelItem => servizio.Prezzo)</td>
                                    <td>€@Html.DisplayFor(modelItem => servizio.PrezzoTot)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p>Nessun servizio aggiunto.</p>
                }
            </div>
        </div>

        <div class="card card-custom mt-3">
            <div class="card-header-custom">
                Importo
            </div>
            <div class="card-body card-body-custom">
                <dl class="row dl-horizontal">
                    <dt class="col-sm-3">Importo Totale:</dt>
                    <dd class="col-sm-9">€@Html.DisplayFor(model => model.Importo)</dd>
                </dl>
            </div>
        </div>

