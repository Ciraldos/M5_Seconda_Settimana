@model Esercitazione_M5_Seconda_Settimana.Models.PrenotazioniServizio

@{
    ViewData["Title"] = "Crea Prenotazione Servizio";
    var servizi = ViewBag.servizi as List<Servizio>;
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <h1 class="text-center">Aggiungi servizio alla prenotazione</h1>

        <hr class="myBgPurple"/>
        <form asp-action="CreaPrenotazioneServizio">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mt-3">
                <label asp-for="IdServizio" class="control-label mb-1 ps-2">Seleziona un servizio:</label>
                <select asp-for="IdServizio" class="form-control qnt">
                    <option value="" disabled selected>Seleziona un servizio</option>
                    @foreach (var s in servizi)
                    {
                        <option value="@s.IdServizio">@s.Descrizione</option>
                    }
                </select>
                <span asp-validation-for="IdServizio" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label asp-for="Data" class="control-label mb-1 ps-2">Inserisci data:</label>
                <input asp-for="Data" class="form-control qnt" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label asp-for="Quantita" class="control-label mb-1 ps-2">Inserisci quantità:</label>
                <input asp-for="Quantita" class="form-control qnt" />
                <span asp-validation-for="Quantita" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label asp-for="Prezzo" class="control-label mb-1 ps-2">Inserisci prezzo <span class="fw-bolder">(€)</span> :</label>
                <input asp-for="Prezzo" class="form-control qnt" />
                <span asp-validation-for="Prezzo" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Crea" class="btn myBtn" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
